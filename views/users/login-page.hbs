<section class="p-4 topmargin"  style="background-color: #eee;">
    <div class="container col-md-4 text-center bg-white " style="border-radius:25px ;">
        <div class="pt-3 ">
            <h2>User Login</h2>
        </div>

        <div class="pt-3 pl-5 pr-5 pb-3">
            <div class="form-group ">
                {{#if loginErr}}
                <p class="error text-danger ">{{loginErr}}</p>
                {{/if}}
                <form action="/login" method="POST">

                    <div class="p-2">
                        <input class="form-control " type="text" required placeholder="Email" name="email">
                    </div>

                    <div class="p-2 ">
                        <input class="form-control " type="password" required placeholder="Password" name="password">
                    </div>

                    <div class="p-2">
                        <input type="submit" value="Login" class="btn btn-primary pt-2">
                    </div>
                    

                </form>
                <a class="p-2" href="/sign-up"> Don't have an account ?</a>

            </div>
        </div>


    </div>
</section>